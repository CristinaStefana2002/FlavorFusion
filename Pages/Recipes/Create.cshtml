@page
@model FlavorFusion.Pages.Recipes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-primary">Create Your Recipe</h1>

<h4 class="text-center text-secondary">Add a Delicious New Recipe</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Recipe.Name" class="control-label text-info"></label>
                <input asp-for="Recipe.Name" class="form-control form-input" />
                <span asp-validation-for="Recipe.Name" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="Recipe.Instructions" class="control-label text-info"></label>
                <textarea asp-for="Recipe.Instructions" class="form-control form-textarea"></textarea>
                <span asp-validation-for="Recipe.Instructions" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <label for="ImageFile" class="control-label text-info">Upload Recipe Image</label>
                <input type="file" class="form-control form-file" id="ImageFile" name="ImageFile" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-page="Index" class="btn btn-link">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

