@page
@model FlavorFusion.Pages.Reviews.IndexModel

@{
    ViewData["Title"] = "Reviews ";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New Review</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Review[0].Comment)</th>
            <th>@Html.DisplayNameFor(model => model.Review[0].Rating)</th>
            <th>@Html.DisplayNameFor(model => model.Review[0].Recipe)</th>
            <th>@Html.DisplayNameFor(model => model.Review[0].User)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Review)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>@Html.DisplayFor(modelItem => item.Recipe.Id)</td> 
                <td>@Html.DisplayFor(modelItem => item.User)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
