@page
@model FlavorFusion.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

<div class="container-fluid">
    <h2>Categories</h2>
    <p>
        <a asp-action="/Categories/Create" class="btn btn-success">Create New Category</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Category)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
